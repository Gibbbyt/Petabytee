# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/petabyte_tech?schema=public"

# NextAuth Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-super-secret-key-here-minimum-32-characters"

# Email Configuration (Nodemailer)
EMAIL_HOST="smtp.gmail.com"
EMAIL_PORT=587
EMAIL_USER="your-email@gmail.com"
EMAIL_PASS="your-app-password"
EMAIL_FROM="noreply@petabyte-tech.com"

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN="your-telegram-bot-token"
TELEGRAM_CHAT_ID="your-admin-chat-id"

# Application Configuration
APP_NAME="Petabyte Tech"
APP_URL="http://localhost:3000"
APP_ENV="development"

# Default Language
DEFAULT_LANGUAGE="sq"

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_PATH="/uploads"

# Analytics Configuration (Optional)
GOOGLE_ANALYTICS_ID=""
FACEBOOK_PIXEL_ID=""

# Payment Configuration (Future)
STRIPE_PUBLISHABLE_KEY=""
STRIPE_SECRET_KEY=""
STRIPE_WEBHOOK_SECRET=""

# External APIs (Future)
OPENAI_API_KEY=""
MAPS_API_KEY=""

# Company Information
COMPANY_NAME="Petabyte Tech"
COMPANY_EMAIL="info@petabyte-tech.com"
COMPANY_PHONE="+383 XX XXX XXX"
COMPANY_ADDRESS="Kosovo"
COMPANY_WEBSITE="https://petabyte-tech.com"

# Social Media Links
FACEBOOK_URL="https://facebook.com/petabytetech"
INSTAGRAM_URL="https://instagram.com/petabytetech"
TWITTER_URL="https://twitter.com/petabytetech"
LINKEDIN_URL="https://linkedin.com/company/petabytetech"
YOUTUBE_URL="https://youtube.com/@petabytetech"

# Feature Flags
ENABLE_REGISTRATIONS=true
ENABLE_PC_CONFIGURATOR=true
ENABLE_PS5_CONFIGURATOR=true
ENABLE_EASY_MAIL_IN=true
ENABLE_FORUM=true
ENABLE_BLOG=true

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=900000  # 15 minutes in milliseconds

# Cache Configuration
REDIS_URL="redis://localhost:6379"
CACHE_TTL=3600  # 1 hour in seconds

# Monitoring & Logging
LOG_LEVEL="info"
SENTRY_DSN=""

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_FREQUENCY="daily"
BACKUP_RETENTION_DAYS=30